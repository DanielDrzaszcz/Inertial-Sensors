<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_bubbleLevelLineVertical"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:srcCompat="@drawable/bubble_level_line_vertical" />

    <ImageView
        android:id="@+id/imageView_bubbleVertical"
        android:layout_width="25dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_bubbleLevelLineVertical"
        app:layout_constraintEnd_toEndOf="@+id/imageView_bubbleLevelLineVertical"
        app:layout_constraintStart_toStartOf="@+id/imageView_bubbleLevelLineVertical"
        app:layout_constraintTop_toTopOf="@+id/imageView_bubbleLevelLineVertical"
        app:srcCompat="@drawable/bubble_flat_vertical" />

    <ImageView
        android:id="@+id/imageView_bubbleLevelLineHorizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_bubbleLevelLineVertical"
        app:layout_constraintVertical_bias="0.2"
        app:srcCompat="@drawable/bubble_level_line_horizontal" />

    <ImageView
        android:id="@+id/imageView_bubbleHorizontal"
        android:layout_width="50dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_bubbleLevelLineHorizontal"
        app:layout_constraintEnd_toEndOf="@+id/imageView_bubbleLevelLineHorizontal"
        app:layout_constraintStart_toStartOf="@+id/imageView_bubbleLevelLineHorizontal"
        app:layout_constraintTop_toTopOf="@+id/imageView_bubbleLevelLineHorizontal"
        app:srcCompat="@drawable/bubble_flat_horizontal" />

    <ImageView
        android:id="@+id/imageView_bubbleLevelCircle"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_bubbleLevelLineVertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toEndOf="@+id/imageView_bubbleLevelLineVertical"
        app:layout_constraintTop_toTopOf="@+id/imageView_bubbleLevelLineVertical"
        app:layout_constraintVertical_bias="0.349"
        app:srcCompat="@drawable/bubble_level_circle" />

    <ImageView
        android:id="@+id/imageView_bubbleCircle"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_bubbleLevelCircle"
        app:layout_constraintEnd_toEndOf="@+id/imageView_bubbleLevelCircle"
        app:layout_constraintStart_toStartOf="@+id/imageView_bubbleLevelCircle"
        app:layout_constraintTop_toTopOf="@+id/imageView_bubbleLevelCircle"
        app:srcCompat="@drawable/bubble_regular" />

</androidx.constraintlayout.widget.ConstraintLayout>